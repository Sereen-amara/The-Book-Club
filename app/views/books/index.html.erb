<h1 class="mb-4">Books</h1>

<%= form_with url: books_path, method: :get, local: true, class: "mb-4" do |form| %>
  <div class="input-group">
    <%= form.text_field :query, placeholder: "Search by title or description", class: "form-control" %>
    <%= form.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Add New Book', new_book_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= truncate(book.description, length: 50) %></td>
      <td><%= number_to_currency(book.price) %></td>
      <td>
        <%= link_to 'Show', book_path(book), class: 'btn btn-info btn-sm' %>
        <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
