<div class="card">
  <div class="card-header">
    <h2><%= @book.title %></h2>
  </div>
  <div class="card-body">
    <p><strong>Description:</strong> <%= @book.description %></p>
    <p><strong>Price:</strong> <%= number_to_currency(@book.price) %></p>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-warning' %>
    <%= link_to 'Back to Books', books_path, class: 'btn btn-secondary' %>
  </div>
</div>
